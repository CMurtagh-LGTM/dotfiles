#
# wm independent hotkeys
#

# terminal emulator
super + Return
	alacritty

super + alt + Return
	alacritty --working-directory $(xcwd)

# eww
super + o
	toggle_dash.py

# program launcher
super + p
	rofi -show drun -theme nord_icons

# program switcher
super + k
	rofi -show window -theme nord_icons

# emoji
super + e
	rofimoji --action clipboard --max=0

super + alt + e
	rofimoji --action clipboard --max=0 --files=math

# Process viewer
super + t
	alacritty -e btop

# Web search
super + i
	rofi -eh 3 -show search -modi "search:ddgr_search.py"

# Passwords
super + l
	rofi-pass

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# Powermenu
super + alt + p
	rofi -show logout -modi "logout:logout_modi.sh" -theme  ".config/rofi/powermenu.rasi"

# Dunst
super + space
	dunstctl close

super + shift + space
	dunstctl close-all

super + ctrl + space
	dunstctl history-pop

super + shift + ctrl + space
	dunstctl context

#
# wm dependant hotkeys
#

super + g
	toggle_gaps.py

#
# media keys
#

XF86AudioPlay
	mpd toggle

XF86AudioNext
	mpd next

XF86AudioPrev
	mpd prev

XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +1000

XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -1000

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86MonBrightnessUp
	xbacklight -inc 10

XF86MonBrightnessDown
	xbacklight -dec 10

